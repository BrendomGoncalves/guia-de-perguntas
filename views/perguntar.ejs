<%- include('partials/header') %>
<body>
<%- include('partials/navbar') %>
<div class="p-2 max-w-3xl flex justify-center">
    <div class="flex flex-col h-96 gap-3">
        <div class="w-full text-center p-2">
            <p class="text-xl text-yellow-500 font-bold">REALIZAR PERGUNTA</p>
        </div>
        <div class="w-full">
            <form method="post" action="/salvarpergunta" class="flex flex-col w-80 gap-2">
                <div class="flex flex-col gap-1 bg-gray-950 p-2">
                    <label class="font-semibold text-white">Título:</label>
                    <input class="p-1" name="titulo" type="text" placeholder="Digite o título da pergunta">
                </div>
                <div class="flex flex-col gap-1 bg-gray-950 p-2">
                    <label class="font-semibold text-white">Descrição:</label>
                    <textarea class="p-1" name="descricao" placeholder="Digite a descrição da pergunta" rows="4"></textarea>
                </div>
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-400 text-yellow-700 font-bold py-2 px-4 rounded-full">
                    Perguntar
                </button>
            </form>
        </div>
    </div>
</div>
</body>
<%- include('partials/footer') %>
